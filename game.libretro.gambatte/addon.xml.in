<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.gambatte"
		name="Game Boy (Gambatte)"
		version="0.5.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.gba" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Game Boy|Game Boy Color</platforms>
		<extensions>gb|gbc|dmg</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Gambatte v0.5.0</summary>
		<description>Gambatte is an accuracy-focused, open-source, cross-platform Game Boy Color emulator written in C++.

Supported files: .gb, .gbc, .dmg

License: GPLv2</description>
		<disclaimer>Game Boy and Game Boy Color are registered trademarks of Nintendo of America, Inc. Gambatte is not affiliated with or endorsed by any of the companies mentioned.</disclaimer>
		<platform>@PLATFORM@</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
